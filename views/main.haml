            %form{:action => '/email', :method => 'POST'}
              %input{:type => 'text', :name => 'email_addr', :value => '', :maxlength=>256}
              %input{:type => 'submit', :name => 'submit', :value => 'I want it.'}
          %small
            Questions?
            %a{:href=>"mailto:gc@memprof.com"} gc@memprof.com  
